---
BasedOnStyle: LLVM
Language: Cpp
Standard: Cpp03

AccessModifierOffset: -4
AllowShortFunctionsOnASingleLine: Empty
AttributeMacros: [DECOMP_INLINE, DECOMP_DONT_INLINE]
ConstructorInitializerAllOnOneLineOrOnePerLine: true
FixNamespaceComments: true
ForEachMacros: [EGG_NW4R_LIST_FOREACH]
IncludeBlocks: Regroup
IndentWidth: 4
InsertNewlineAtEOF: true
PointerAlignment: Left
ShortNamespaceLines: 0
SortIncludes: "true"
SortUsingDeclarations: "true"
UseTab: Never
WhitespaceSensitiveMacros:
  [
    ASM,
    ASM_VOLATILE,
    DECOMP_FORCEACTIVE_DTOR,
    DECOMP_FORCEACTIVE,
    DECOMP_FORCELITERAL,
    EGG_ASSERT_MSG,
    EGG_ASSERT,
    NW4R_EF_LIST_FOREACH_SAFE,
    NW4R_EF_LIST_FOREACH,
    NW4R_UT_LINKLIST_FOREACH,
    NW4R_UT_LINKLIST_FOREACH_SAFE,
    NW4R_UT_LIST_FOREACH_SAFE,
    NW4R_UT_LIST_FOREACH,
  ]

IncludeCategories:
  - Regex: '^<(nw4r|egg|Pack)?(\/)?types' # "Types" headers
    Priority: 0
    CaseSensitive: true

  - Regex: '<Pack\/[[:lower:].]+h>' # RP public headers
    Priority: 2
    CaseSensitive: true

  - Regex: "RVLFaceLib" # RFL public headers
    Priority: 3
    CaseSensitive: true

  - Regex: '<egg\/[[:lower:].]+h>' # EGG public headers
    Priority: 4
    CaseSensitive: true

  - Regex: '<nw4r\/[[:alnum:].]+h>' # NW4R public headers
    Priority: 5
    CaseSensitive: true

  - Regex: '^<revolution\/[[:upper:].]+h>' # RVL SDK public headers
    Priority: 6
    CaseSensitive: true

  - Regex: "<[[:alnum:].]+>" # STL headers
    Priority: 7 # Priority 0 is header mapped to src file
    CaseSensitive: true

  - Regex: ".*" # All other headers
    Priority: 1
